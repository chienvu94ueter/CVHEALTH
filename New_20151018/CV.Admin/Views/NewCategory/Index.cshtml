@model List<CV.Entity.Table.NewCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 30px">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Danh sách danh mục</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>


                </div>
            </div>
            <div class="ibox-content">
               
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th></th>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                              
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><input type="checkbox" checked class="i-checks" name="input[]"></td>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                   
                                    <td>@item.CreatedDate</td>
                                    <td>@(item.Status  ? "Kích hoạt" : "Khóa")</td>
                                    <td>

                                        <a  href="/NewCategory/Detail/@item.ID" type="button" class="btn btn-primary">
                                            <i class="fa fa-commenting-o"></i>
                                        </a>

                                        <a  href="/NewCategory/Edit/@item.ID"type="button" class="btn btn-primary">
                                            <i class="fa fa-wrench"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                            <br />
                            <a class="btn btn-primary" href="/NewCategory/Create"><i class="fa fa-plus-square"></i> Thêm mới</a>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
