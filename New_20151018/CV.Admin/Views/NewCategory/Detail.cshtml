@model CV.Entity.Table.NewCategory
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Chi tiết danh mục</h5>
                
            </div>
            <div class="ibox-content">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Tiêu đề</th>
                            <th>Ảnh</th>
                            <th>Mô tả</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.ID</td>
                            <td>@Model.Name</td>
                            <td>@Model.MetaTittle</td>
                            <th>
                                <img src="@Model.Image" width="200" height="200"/>
                            </th>
                            <td>@Model.Description</td>
                            <td>@Model.CreatedDate</td>
                            <td>@(Model.Status ? "Kích hoạt" : "Khóa")</td>
                        </tr>
                       
                    </tbody>
                </table>
                <a class="btn btn-primary" href="/NewCategory/Create"><i class="fa fa-plus-square"></i> Thêm mới</a>
                <a class="btn btn-primary" href="/NewCategory/Edit/@Model.ID"><i class="fa fa-wrench"></i> Cập nhật</a>
                <a class="btn btn-primary" href="/NewCategory/Index"><i class="fa fa-list"></i> Danh sách</a>
            </div>
        </div>
    </div>
</div>
