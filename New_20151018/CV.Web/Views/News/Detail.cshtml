@using CV.Entity.Table
@using CV.Web.Models.ViewModel

@{
    ViewBag.Title = "Trang chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var realted = ViewBag.RelatedNews;

}

<style>
    .content-main img {
        max-width: 100%;
    }
</style>
<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-md-8 col-xs-12 col-sm-12" style="text-align: justify">
        <!-- Blog Post -->
        <hr>
        <h2 style="color: blueviolet">
            @Model.Name
        </h2>
        <hr>
        <div class="content-main img-responsive">
            <p class="text-justify">
                @Html.Raw(Model.Details)
            </p>
        </div>
        <!-- Post Content -->

    </div>
</div>
<!-- /.row -->
<!-- Related Projects Row -->

    <h2 class="page-header" style="background-image: url(/Assets/images/icon-label.png); background-repeat: no-repeat; padding-left: 40px; line-height: 35px; height: 35px; color: whitesmoke; text-transform: uppercase;font-size: 14px">
        Bài viết liên quan
    </h2>

<div class="row">
    @foreach (var a in realted)
    {
        <div class="col-sm-4 col-xs-6">
            <a href="/@a.categoryMetaTitle/@a.MetaTittle">
                <img class="img-responsive portfolio-item" src="@a.Image" style="height: 200px" alt="">
            </a>
            <p style="text-align: center; padding-top: 5px; color: black; font-size: 16px">@a.Name</p>
        </div>

    }


</div>