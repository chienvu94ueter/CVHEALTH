@model List<CV.Entity.Table.NewCategory>
@{
    ViewBag.Title = "Trang danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header" style="background-image: url(/Assets/images/icon-label.png); background-repeat: no-repeat; padding-left: 40px; line-height: 35px; height: 35px; color: whitesmoke; text-transform: uppercase;font-size: 14px">
                Danh mục
            </h2>

        </div>
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-md-4 img-portfolio">
                <a href="/danh-muc/@item.MetaTittle" class="thumbnail">
                    <img class="img-responsive img-hover" src="@item.Image" style="height:200px" alt="">
                </a>
                <h3>
                    <center>
                        <a href="/danh-muc/@item.MetaTittle" style="text-decoration: none; text-align: justify">@item.Name</a>
                    </center>
                </h3>

            </div>

        }



        <!-- /.row -->
        <hr>
    </div>
    <!-- /.container -->
</div>